#include<bits/stdc++.h>
using namespace std;
int main()
{
    ios_base::sync_with_stdio(false);
    long int t;
    cin>>t;
    while(t--)
    {
        long int n,m,k,i,j,count=0;
        cin>>n>>m>>k;
        map<long int,long int>M;
        M.clear();
        char s[n+1][m+1];
        for(i=1;i<=n;i++)
        {
            for(j=1;j<=m;j++)
            {
                cin>>s[i][j];
                if(s[i][j]=='.')
                    M[i]++;
                    else
                        count++;
            }
        }
        while(k--)
        {
            long int max1=0,index=0;
            for(i=1;i<=n;i++)
            {
               if(M[i]>=max1)
               {
                   max1=M[i];
                   index=i;
               }
            }
            count-=(m-max1);
            count+=(max1);
            M[index]=(m-max1);
        }
        cout<<count<<endl;
    }
}
